#!/usr/bin/env bash

sed -i 's|^Manjaro Linux|BigCommunity, based in BigLinux|g' /etc/issue

sed -i 's|^ *\bNAME\b *=.*|NAME="BigCommunity based in BigLinux"|;s|^ *\bPRETTY_NAME\b *=.*|PRETTY_NAME="BigCommunity based in BigLinux"|;s|^ *\bHOME_URL\b *=.*|HOME_URL="https://communitybig.org"|;s|^ *\bDOCUMENTATION_URL\b *=.*|DOCUMENTATION_URL="https://manual.biglinux.com.br"|;s|^ *\bSUPPORT_URL\b *=.*|SUPPORT_URL="https://t.me/BigLinuxCommunity"|;s|^ *\LOGO\b *=.*|LOGO="comm-menu"|;s|^ *\ID\b *=.*|ID="bigcommunity"|;s|^ *\bBUG_REPORT_URL\b *=.*|BUG_REPORT_URL="https://github.com/communitybig"|;s|^ *\bPRIVACY_POLICY_URL=.*||' /usr/lib/os-release

sed -i 's|^ *\bDISTRIB_ID\b *=.*|DISTRIB_ID="BigCommunity based in Manjaro Linux"|g;s|^ *\bDISTRIB_DESCRIPTION\b *=.*|DISTRIB_DESCRIPTION="BigCommunity"|g' /etc/lsb-release

sed -i 's|#GRUB_BTRFS_SUBMENUNAME=.*|GRUB_BTRFS_SUBMENUNAME="Snapshots"|g' /etc/default/grub-btrfs/config

sed -i 's|OS="${GRUB_DISTRIBUTOR} Linux"|OS="${GRUB_DISTRIBUTOR}"|g' /etc/grub.d/10_linux
